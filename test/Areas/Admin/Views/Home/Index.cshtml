@model List<Product>
<a asp-action="Add" asp-controller="Home" asp-area="Admin" class="btn btn-primary btn-sm my-2">Add Product</a>

<table class="table table-sm table-bordered table-hover mt-2">
    <tr>
        <th>Id</th>
        <th>Image</th>
        <th>Name</th>
        <th>Price</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

<tr>
    <td>@item.Id</td>
    <td><getCategoryName product-id="@item.Id"></getCategoryName></td>
    <td>@item.Name</td>
    <td>@item.Price</td>
    <td><a asp-action="Delete" asp-controller="Home" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
    <a asp-action="Update" asp-controller="Home" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
    <a asp-action="SelectCategory" asp-controller="Home" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-dark">Select Category</a></td>


</tr>
    }

</table>