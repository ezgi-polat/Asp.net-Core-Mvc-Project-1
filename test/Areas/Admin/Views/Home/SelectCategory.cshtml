@model List<CategorySelectModel>

<form asp-action="SelectCategory" method="post">

    @for (int i = 0; i < Model.Count; i++)
    {
        @*<div class="container">*@
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].categoryId" />
            <input type="hidden" asp-for="@Model[i].categoryName" />
            <input type="checkbox" asp-for="@Model[i].to_be" class="form-check-input" />
            <label class="form-check-label">@Model[i].categoryName</label>
        </div>
        @*</div>*@
    }
    <br />
    <div class="form-group">
        <button type="submit" class="btn btn-info ">Save</button>
    </div>
</form>