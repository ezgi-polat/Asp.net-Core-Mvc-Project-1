@model CategoryAddModel
<form asp-action="Add" asp-controller="Category" asp-area="Admin" method="post" class="p-3 w-75 mx-auto shadow" enctype="multipart/form-data">
    @* file için tyoksa Null döner *@
    <div class="form-group">
        <label>Product Name:</label>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <a asp-action="Index" asp-controller="Category" asp-area="Admin" class="btn btn-warning ">Cancel</a>
        <button type="submit" class="btn btn-primary ">Save</button>
    </div>
</form>
@section JavaScript{
    <script src="~/jqueryValid/jquery.validate.min.js"></script>
    <script src="~/jqueryUnobtrusive/jquery.validate.unobtrusive.min.js"></script>

}

