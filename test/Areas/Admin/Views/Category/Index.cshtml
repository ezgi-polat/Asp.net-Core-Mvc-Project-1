@model List<Category>
<a asp-action="Add" asp-controller="Category" asp-area="Admin" class="btn btn-primary btn-sm my-2">Add Category</a>

<table class="table table-sm table-bordered table-hover mt-2">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a asp-action="Update" asp-controller="Category" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
            <a asp-action="Delete" asp-controller="Category" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>


        </tr>
    }

</table>