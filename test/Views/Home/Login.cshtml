@model test.Models.UserLoginModel
<form asp-action="Login" method="post" class="p-4 w-50 mx-auto shadow">
    <div class="form-group">
        <label>User Name:</label>
        <span asp-validation-for="@Model.userName" class="text-danger"></span>
        <input type="text" asp-for="@Model.userName" value="" class="form-control" />
    </div>
    <div class="form-group">
        <label>Password:</label>
        <span asp-validation-for="@Model.password" class="text-danger"></span>
        <input type="password" asp-for="@Model.password" value="" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="@Model.RememberMe" value="" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label">Remember me</label>
    </div>
    <div asp-validation-summary="ModelOnly"></div> @*şifre yanlış olursa*@
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-info">Log in</button>
    </div>


</form>
@section JavaScript{
    <script src="~/jqueryValid/jquery.validate.min.js"></script>
    <script src="~/jqueryUnobtrusive/jquery.validate.unobtrusive.min.js"></script>
}