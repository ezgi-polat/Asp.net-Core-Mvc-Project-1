@model List<Product>


<div class="row">
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <div class=" col-md-3">
                <div class="card mr-2 mb-2">
                    <img src="/img/@item.İmage" class="card-img-top " alt="Resim Yok" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Price</p>
                        <div class="row">
                            <a asp-action="AddBasket" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-primary float-sm-left ms-lg-1">Add Basket</a>
                            <a asp-action="ProductDetail" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger float-sm-right">Show Detail</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center">
            No product.
        </div>

    }

</div>

